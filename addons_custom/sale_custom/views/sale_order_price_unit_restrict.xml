<odoo>
    <record id="view_order_form_inherit_price_unit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.price.unit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Chỉ hiển thị trường price_unit cho quản trị viên -->
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="attributes">
                <attribute name="groups">sales_team.group_sale_manager</attribute>
                <attribute name="readonly">0</attribute>
            </xpath>
            <!-- Chỉ hiển thị trường price_unit readonly cho 2 quyền user -->
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="after">
                <field name="price_unit" string="Đơn giá" readonly="1"
                    groups="sales_team.group_sale_salesman,sales_team.group_sale_salesman_all_leads"/>
            </xpath>
        </field>
    </record>
</odoo>