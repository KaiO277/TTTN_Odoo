<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_hide_incoterm" model="ir.ui.view">
        <field name="name">sale.order.form.hide.incoterm</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
        <field name="arch" type="xml">
            <!-- Ẩn trường Incoterm bằng XPath -->
            <xpath expr="//field[@name='incoterm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <!-- Ẩn trường Địa điểm Incoterm bằng XPath -->
            <xpath expr="//field[@name='incoterm_location']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>