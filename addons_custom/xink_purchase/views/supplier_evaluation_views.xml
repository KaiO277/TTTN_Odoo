<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_supplier_evaluation_form" model="ir.ui.view">
        <field name="name">supplier.evaluation.form</field>
        <field name="model">supplier.evaluation</field>
        <field name="arch" type="xml">
            <form string="Đánh Giá Nhà Cung Cấp">
    <header>
        <button string="Gửi đánh giá" type="object" name="action_submit" invisible="state != 'draft'" class="btn-primary"/>
        <button string="Phê duyệt" type="object" name="action_approve" invisible="state != 'submitted'" class="btn-success"/>
        <button string="Từ chối" type="object" name="action_reject" invisible="state != 'submitted'"/>
        <button string="Đặt lại" type="object" name="action_reset" invisible="state not in ('submitted','approved','rejected')"/>
        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
    </header>
    <sheet>
        <div class="oe_title">
            <h1>
                <field name="name" readonly="1"/>
            </h1>
        </div>
        <group string="Thông tin đánh giá" col="2">
            <group>
                <field name="supplier_id" string="Nhà cung cấp"/>
                <field name="template_id" string="Bộ đánh giá" domain="[('active', '=', True)]"/>
                <field name="department_id" string="Bộ phận đánh giá"/>
            </group>
            <group>
                <field name="evaluation_date" string="Ngày đánh giá"/>
                <field name="classification" string="Xếp loại" readonly="1"/>
            </group>
        </group>
        <group col="1">
            <group string="Tiêu chí đánh giá" col="1">
                <field name="line_ids" nolabel="1" style="width: 100%">
                    <list editable="bottom">
                        <field name="criteria_id" nolabel="1"/>
                        <field name="score_scale" readonly="1" nolabel="1"/>
                        <field name="score" widget="score_buttons" string="Điểm/Đạt" nolabel="1"/>
                    </list>
                    <form string="Chi tiết đánh giá">
                        <group>
                            <field name="criteria_id" readonly="1"/>
                            <field name="score_scale" readonly="1"/>
                            <field name="score" attrs="{'invisible': [('score_scale', '=', 'boolean')]}'" widget="score_buttons"/>
                            <field name="score_bool" attrs="{'invisible': [('score_scale', '!=', 'boolean')]}'" invisible="1"/>
                            <button name="button_set_dat" type="object" string="Đạt" attrs="{'invisible': [('score_scale', '!=', 'boolean')]}" class="btn-success"/>    
                            <button name="button_set_khong_dat" type="object" string="Không đạt" attrs="{'invisible': [('score_scale', '!=', 'boolean')]}"/>
                        </group>
                    </form>
                </field>
            </group>
        </group>
        <group>
            <field name="note" string="Ghi chú" placeholder="Nhập ghi chú..."/>
        </group>
    </sheet>
    <chatter/>
</form>
        </field>
    </record>

    <record id="view_supplier_evaluation_list" model="ir.ui.view">
        <field name="name">supplier.evaluation.list</field>
        <field name="model">supplier.evaluation</field>
        <field name="arch" type="xml">
            <list decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='approved'" decoration-danger="state=='rejected'" >
                <field name="name" string="Mã đánh giá"/>
                <field name="supplier_id" string="Nhà cung cấp"/>
                <field name="evaluation_date" string="Ngày đánh giá"/>
                <field name="classification" string="Xếp loại"/>
                <field name="status_display" string="Trạng thái" widget="html"/>
            </list>
        </field>
    </record>

    <record id="view_supplier_evaluation_search" model="ir.ui.view">
        <field name="name">supplier.evaluation.search</field>
        <field name="model">supplier.evaluation</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm Đánh giá nhà cung cấp">
                <field name="name" string="Mã đánh giá"/>
                <field name="supplier_id" string="Nhà cung cấp"/>
                <field name="department_id" string="Bộ phận đánh giá"/>
                <field name="evaluation_date" string="Ngày đánh giá"/>
                <filter name="draft" string="Nháp" domain="[('state', '=', 'draft')]"/>
                <filter name="submitted" string="Đã gửi" domain="[('state', '=', 'submitted')]"/>
                <filter name="approved" string="Đã duyệt" domain="[('state', '=', 'approved')]"/>
                <separator/>
                <filter name="A" string="Xuất sắc" domain="[('classification', '=', 'A')]"/>
                <filter name="B" string="Tốt" domain="[('classification', '=', 'B')]"/>
                <filter name="C" string="Trung bình" domain="[('classification', '=', 'C')]"/>
                <filter name="eliminated" string="Loại" domain="[('classification', '=', 'eliminated')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter name="group_by_supplier" string="Nhà cung cấp" context="{'group_by': 'supplier_id'}"/>
                    <filter name="group_by_classification" string="Xếp loại" context="{'group_by': 'classification'}"/>
                    <filter name="group_by_state" string="Trạng thái" context="{'group_by': 'state'}"/>
                    <filter name="group_by_department" string="Bộ phận đánh giá" context="{'group_by': 'department_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Supplier Evaluation Action -->
    <record id="action_supplier_evaluation" model="ir.actions.act_window">
        <field name="name">Đánh Giá Nhà Cung Cấp</field>
        <field name="res_model">supplier.evaluation</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_supplier_evaluation_list"/>
        <field name="search_view_id" ref="view_supplier_evaluation_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo đánh giá nhà cung cấp đầu tiên!
            </p>
            <p>
                Đánh giá và phân loại nhà cung cấp dựa trên nhiều tiêu chí khác nhau.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_supplier_evaluation_list"
              name="Đánh giá nhà cung cấp"
              parent="purchase.menu_purchase_root"
              action="action_supplier_evaluation"
              sequence="60"
              groups="purchase.group_purchase_user"/>
</odoo>