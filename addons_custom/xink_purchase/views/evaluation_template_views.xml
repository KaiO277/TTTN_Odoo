<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_supplier_eval_template_form_v2" model="ir.ui.view">
        <field name="model">evaluation.template</field>
        <field name="arch" type="xml">
            <form string="Bộ đánh giá nhà cung cấp">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <!-- <field name="total_max_score" readonly="1" 
                               string="Tổng điểm tối đa" 
                               help="Dùng để tham khảo khi cấu hình quy tắc xếp loại"/> -->
                    </group>
                    <group col="2">
                        <group string="Tiêu chí đánh giá">
                            <field name="criteria_line_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="score_scale"/>
                                    <field name="criteria_weight"/>
                                    <field name="liet_score"/>
                                    <field name="max_score" readonly="1"/>
                                </list>
                            </field>
                        </group>
                        <group string="Thiết lập xếp loại">
                            <field name="rule_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="category"/>
                                    <field name="min_score"/>
                                    <!-- <field name="max_score" attrs="{'readonly': [('category', '=', 'A')]}"/> -->
                                </list>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List view for Evaluation Template -->
    <record id="view_supplier_eval_template_list" model="ir.ui.view">
        <field name="model">evaluation.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Action for Evaluation Template -->
    <record id="action_supplier_eval_template" model="ir.actions.act_window">
        <field name="name">Bộ đánh giá nhà cung cấp</field>
        <field name="res_model">evaluation.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_supplier_eval_template_list"/>
        <field name="context">{"search_default_list": 1}</field>
    </record>

    <!-- Menu for Evaluation Template -->
    <menuitem id="menu_supplier_eval_template_root"
            name="Bộ đánh giá nhà cung cấp"
            parent="purchase.menu_purchase_config"
            action="action_supplier_eval_template"
            sequence="20"/>
</odoo>
