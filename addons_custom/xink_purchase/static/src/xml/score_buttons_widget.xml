<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="xink_purchase.ScoreButtonsWidget" owl="1">
        <div class="d-flex flex-wrap align-items-center score-buttons-container">
            <t t-foreach="scoreButtons" t-as="btn" t-key="btn.value">
                <button 
                    type="button" 
                    t-att-class="btn.cssClass + (btn.isActive ? ' active' : '')"
                    t-on-click="() => this.onScoreClick(btn.value)"
                    t-att-disabled="props.readonly">
                    <span t-esc="btn.label"/>
                </button>
            </t>
        </div>
    </t>
</templates>    