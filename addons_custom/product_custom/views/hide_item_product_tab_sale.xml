<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_hide_label_button" model="ir.ui.view">
            <field name="name">product.template.form.inherit.hide_label_button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">

                <!-- Ẩn nút Print Labels -->
                <xpath expr="//button[@name='action_open_label_layout']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Ẩn nhóm 'Upsell & Cross-Sell' -->
                <xpath expr="//group[@name='upsell']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>



            </field>
        </record>
    </data>
</odoo>
