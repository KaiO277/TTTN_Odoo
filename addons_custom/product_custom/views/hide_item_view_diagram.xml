<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit product.template form view to hide View Diagram button -->
    <record id="hide_stock_view_diagram_button_custom" model="ir.ui.view">
        <field name="name">product.template.hide.view.diagram.custom</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <!-- Hide the View Diagram button -->
            <xpath expr="//button[@id='stock.view_diagram_button']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <!-- Inherit product.product form view to hide View Diagram button -->
    <record id="hide_stock_view_diagram_button_product_custom" model="ir.ui.view">
        <field name="name">product.product.hide.view.diagram.custom</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <!-- Hide the View Diagram button -->
            <xpath expr="//button[@id='stock.view_diagram_button']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>