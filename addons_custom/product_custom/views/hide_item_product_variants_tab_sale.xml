<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_product_product_form_inherit_hide_print_labels" model="ir.ui.view">
            <field name="name">product.product.form.inherit.hide.print.labels</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">

                <!-- Ẩn nút Print Labels -->
                <xpath expr="//button[@name='action_open_label_layout']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Ẩn nhóm 'Upsell & Cross-Sell' -->
                <xpath expr="//group[@name='upsell']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>


            </field>
        </record>
    </data>
</odoo>
