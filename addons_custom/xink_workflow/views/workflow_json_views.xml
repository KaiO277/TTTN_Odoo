<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- List View -->
    <record id="view_workflow_json_list" model="ir.ui.view">
        <field name="name">xink.workflow.json.list</field>
        <field name="model">xink.workflow.json</field>
        <field name="arch" type="xml">
            <list string="Workflow JSON Configurations" sample="1">
                <field name="name" string="Workflow Name"/>
                <field name="module" string="Module"/>
                <field name="description" string="Description"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="created_at" string="Created"/>
                <field name="updated_at" string="Last Updated"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_workflow_json_form" model="ir.ui.view">
        <field name="name">xink.workflow.json.form</field>
        <field name="model">xink.workflow.json</field>
        <field name="arch" type="xml">
            <form string="Workflow JSON Configuration">
                <header>
                    <button name="action_activate" string="Activate" type="object" 
                            class="btn-primary" invisible="active"/>
                    <button name="action_deactivate" string="Deactivate" type="object" 
                            class="btn-secondary" invisible="not active"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Workflow Name..." required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="module" required="1" placeholder="e.g., sale, purchase, stock"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="created_at" readonly="1"/>
                            <field name="updated_at" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="JSON Data" name="json_data">
                            <field name="data" widget="ace" options="{'mode': 'json'}" 
                                   placeholder='{"workflow": {"name": "Sample Workflow", "mainflow": [...], "dependency": [...], "report": [...]}}' nolabel="1"/>
                        </page>
                        
                        <page string="Preview" name="preview">
                            <field name="data_preview" readonly="1" widget="ace" options="{'mode': 'json', 'readonly': true}" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_workflow_json_search" model="ir.ui.view">
        <field name="name">xink.workflow.json.search</field>
        <field name="model">xink.workflow.json</field>
        <field name="arch" type="xml">
            <search string="Search Workflow JSON">
                <field name="name" string="Name"/>
                <field name="module" string="Module"/>
                <field name="description" string="Description"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="This Week" name="this_week" domain="[('created_at', '>=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="This Month" name="this_month" domain="[('created_at', '>=', (context_today().replace(day=1)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Module" name="group_module" context="{'group_by': 'module'}"/>
                    <filter string="Active Status" name="group_active" context="{'group_by': 'active'}"/>
                    <filter string="Created Date" name="group_created" context="{'group_by': 'created_at:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_workflow_json_kanban" model="ir.ui.view">
        <field name="name">xink.workflow.json.kanban</field>
        <field name="model">xink.workflow.json</field>
        <field name="arch" type="xml">
            <kanban string="Workflow JSON" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="module"/>
                <field name="active"/>
                <field name="created_at"/>
                <field name="description"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="module" widget="badge"/>
                                    <br/>
                                    <t t-if="record.description.value">
                                        <field name="description"/>
                                    </t>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="active" widget="boolean_toggle"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="created_at" widget="date"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_workflow_json" model="ir.actions.act_window">
        <field name="name">Workflow JSON Configurations</field>
        <field name="res_model">xink.workflow.json</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="view_id" ref="view_workflow_json_kanban"/>
        <field name="search_view_id" ref="view_workflow_json_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first workflow JSON configuration!
            </p>
            <p>
                Workflow JSON configurations define the structure and behavior of your workflow dashboards.
                You can create different configurations for different modules.
            </p>
        </field>
    </record>

</odoo>
