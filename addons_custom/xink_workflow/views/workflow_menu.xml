<odoo>
    <!-- SALE -->
    <record id="action_workflow_sale_backend_v6" model="ir.actions.client">
        <field name="name">Quy trình bán hàng</field>
        <field name="tag">xink_workflow.WorkflowClientAction</field>
        <field name="context">{ "module": "sale" }</field>
    </record>

    <menuitem id="menu_workflow_sale_backend"
              name="Quy trình bán hàng"
              parent="sale.sale_menu_root"
              sequence="95"
              action="action_workflow_sale_backend_v6"/>

    <!-- PURCHASE -->
    <record id="action_workflow_purchase_backend_v6" model="ir.actions.client">
        <field name="name">Quy trình mua hàng</field>
        <field name="tag">xink_workflow.WorkflowClientAction</field>
        <field name="context">{ "module": "purchase" }</field>
    </record>

    <menuitem id="menu_workflow_purchase_backend"
              name="Quy trình mua hàng"
              parent="purchase.menu_purchase_root"
              sequence="115"
              action="action_workflow_purchase_backend_v6"/>

    <!-- Stock -->
    <record id="action_workflow_stock_backend_v6" model="ir.actions.client">
        <field name="name">Quy trình kho</field>
        <field name="tag">xink_workflow.WorkflowClientAction</field>
        <field name="context">{ "module": "stock" }</field>
    </record>

    <menuitem id="menu_workflow_stock_backend"
              name="Quy trình kho"
              parent="stock.menu_stock_root"
              sequence="115"
              action="action_workflow_stock_backend_v6"/>

    <!-- Action for Workflow JSON -->
    <record id="action_workflow_json_config" model="ir.actions.act_window">
        <field name="name">Workflow JSON Configurations</field>
        <field name="res_model">xink.workflow.json</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first workflow JSON configuration!
            </p>
            <p>
                Manage and customize workflow configurations for different modules.
            </p>
        </field>
    </record>
    <!-- Direct Access from Settings Menu -->
    <menuitem id="menu_workflow_direct_config"
              name="Workflow Configuration"
              parent="base.menu_administration"
              sequence="75"
              action="action_workflow_json_config"
              groups="base.group_system"/>
</odoo>