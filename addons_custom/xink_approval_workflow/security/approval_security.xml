<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_approval_user" model="res.groups">
        <field name="name">Người dùng phê duyệt</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        <field name="comment">Có thể tạo và xem yêu cầu phê duyệt</field>
    </record>

    <record id="group_approval_manager" model="res.groups">
        <field name="name">Quản lý phê duyệt</field>
        <field name="category_id" ref="base.module_category_human_resources"/>
        <field name="implied_ids" eval="[(4, ref('xink_approval_workflow.group_approval_user'))]"/>
        <field name="comment">Có thể quản lý quy trình phê duyệt và tất cả yêu cầu</field>
    </record>

    <!-- Record Rules -->
    <!-- Workflow Rules -->
    <record id="approval_workflow_rule_user" model="ir.rule">
        <field name="name">Quy trình phê duyệt: Người dùng</field>
        <field name="model_id" ref="model_xink_approval_workflow"/>
        <field name="domain_force">[('active', '=', True)]</field>
        <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="approval_workflow_rule_manager" model="ir.rule">
        <field name="name">Quy trình phê duyệt: Quản lý</field>
        <field name="model_id" ref="model_xink_approval_workflow"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>
