<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="xink_ls_checkin.map_demo_template" owl="1">
    <!-- Gọi asset backend -->
    <t t-call-assets="web.assets_backend" t-js="false"/>

    <!-- Wrapper có thanh cuộn toàn trang -->
    <div class="xink-scroll-wrapper">
      <div class="o_map_container o_content d-flex justify-content-center align-items-start px-3 py-2">
        <div class="card shadow rounded-4 w-100" style="min-height: 70vh; max-width: 1400px;">
          <div class="card-body d-flex flex-column gap-3 h-100">
            <!-- Loading -->
            <t t-if="state.loading">
              <div class="alert alert-info">Đang tải dữ liệu...</div>
            </t>

            <!-- Error -->
            <t t-if="state.error and !state.loading">
              <div class="alert alert-danger" t-esc="state.error"/>
            </t>

            <!-- Filter -->
            <div class="filter-bar row g-3 px-2 bg-white py-2 w-100 mb-3" style="position: sticky; top: 0; z-index: 1000;">
              <div class="col-md-4">
                <input type="date" class="form-control" t-att-value="state.selectedDate" t-on-change="onDateChange"/>
              </div>
              <div class="col-md-4">
                <select class="form-select" t-on-change="onEmployeeChange">
                  <option t-att-value="'null'">Tất cả nhân viên</option>
                  <t t-foreach="state.employees" t-as="emp" t-key="emp.id">
                    <option t-att-value="emp.id" t-esc="emp.name"/>
                  </t>
                </select>
              </div>
              <div class="col-md-4">
                <select class="form-select">
                  <option>Tất cả khu vực</option>
                  <option>Hải Châu</option>
                  <option>Sơn Trà</option>
                </select>
              </div>
            </div>

            <!-- Nội dung -->
            <div class="row flex-grow-1" style="min-height: 500px;">
              <!-- Danh sách -->
              <div class="col-md-3 d-flex flex-column">
                <div class="card flex-grow-1 shadow-sm rounded-3 border-0">
                  <div class="card-header bg-light py-2 border-bottom">
                    <h5 class="mb-0 text-primary fw-bold">Danh sách check-in</h5>
                    <div class="mt-1 text-muted"><strong>Tổng số check-in:</strong> <span t-esc="state.totalCheckins"/></div>
                  </div>
                  <div class="card-body p-2 d-flex flex-column">
                    <div class="table-responsive" style="max-height: calc(70vh - 150px); overflow: auto; flex-grow: 1;">
                      <div class="d-flex flex-column gap-2">
                        <t t-foreach="state.locations" t-as="loc" t-key="loc.id">
                          <div class="card clickable-row shadow-sm px-3 py-2 border-0"
                               t-att-data-lat="loc.in_latitude"
                               t-att-data-lng="loc.in_longitude"
                               t-att-data-name="loc.xink_shop_name"
                               t-att-data-id="loc.id"
                               t-on-click="onLocationClick"
                               style="cursor: pointer;">
                            <div class="d-flex justify-content-between align-items-start">
                              <div class="fw-semibold text-primary" style="white-space: pre-line;">
                                <t t-esc="loc.xink_shop_name"/>
                              </div>
                              <div class="text-muted small text-nowrap">
                                <t t-esc="loc.check_in"/>
                              </div>
                            </div>
                            <div class="text-dark small">
                              <t t-esc="loc.xink_shop_owner_name"/>
                            </div>
                            <div class="text-muted small">
                              <i class="fa fa-user me-1 text-secondary"/> <t t-esc="loc.employee_id"/>
                            </div>
                            <div class="small">
                              <strong>Công việc:</strong> <t t-esc="loc.job_content"/>
                            </div>
                            <t t-if="loc.xink_potential_customer">
                              <span class="badge bg-warning-subtle text-dark mt-1" style="width: fit-content;">Khách hàng tiềm năng</span>
                            </t>
                          </div>
                        </t>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Bản đồ -->
              <div class="col-md-9 d-flex flex-column">
                <div class="card flex-grow-1 shadow-sm rounded-3 border-0">
                  <div class="card-header bg-primary text-white py-2">
                    <h6 class="mb-0"><i class="fa fa-globe me-1"></i> Bản đồ Check-in Của Nghĩa SmartWork</h6>
                  </div>
                  <div class="card-body p-0" style="position: relative;">
                    <div id="map" style="height: 100%; min-height: 500px; width: 100%; border-radius: 0 0 0.5rem 0.5rem;"></div>
                    <div style="position: absolute; bottom: 10px; right: 10px; z-index: 1000; background: white; padding: 10px 12px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.2); font-size: 14px;">
                      <strong class="d-block mb-1">Chú giải</strong>
                      <div class="d-flex align-items-center mb-1">
                        <span style="width: 12px; height: 12px; background-color: red; border-radius: 50%; display: inline-block; margin-right: 6px;"></span>
                        Khách hàng tiềm năng
                      </div>
                      <div class="d-flex align-items-center">
                        <span style="width: 12px; height: 12px; background-color: green; border-radius: 50%; display: inline-block; margin-right: 6px;"></span>
                        Khách hàng
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div> <!-- End content -->
          </div>
        </div>
      </div>
    </div>

    <!-- Leaflet & MarkerCluster -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css"/>
    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.css"/>
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.5.3/dist/MarkerCluster.Default.css"/>
    <script src="https://unpkg.com/leaflet.markercluster@1.5.3/dist/leaflet.markercluster.js"/>
  </t>
</templates>