<odoo>
    <!-- Form View -->
    <record id="view_sales_target_form" model="ir.ui.view">
        <field name="name">sales.target.form</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <form string="Đặt mục tiêu doanh số">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" placeholder="Mã mục tiêu"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="target_amount"/>
                            <field name="assign_type"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Ghi chú">
                            <field name="note" placeholder="Thêm ghi chú..."/>
                        </page>
                        <page string="Tiến độ">
                            <field name="achieved_amount" readonly="1"/>
                            <field name="progress" widget="progressbar" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View (thay thế tree) -->
    <record id="view_sales_target_list" model="ir.ui.view">
        <field name="name">sales.target.list</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='done'" decoration-info="state=='in_progress'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="target_amount"/>
                <field name="achieved_amount"/>
                <field name="progress" widget="progressbar"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sales_target_search" model="ir.ui.view">
        <field name="name">sales.target.search</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm mục tiêu doanh số">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
                <filter name="in_progress" string="Đang diễn ra" domain="[('state','=','in_progress')]"/>
                <filter name="done" string="Đã kết thúc" domain="[('state','=','done')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter name="group_by_employee" string="Nhân viên" context="{'group_by': 'employee_id'}"/>
                    <filter name="group_by_state" string="Trạng thái" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sales_target" model="ir.actions.act_window">
        <field name="name">Đặt mục tiêu doanh số</field>
        <field name="res_model">sales.target</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_sales_target_list"/>
        <field name="search_view_id" ref="view_sales_target_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo mục tiêu doanh số đầu tiên!
            </p>
            <p>
                Quản lý mục tiêu doanh số cho từng nhân viên.
            </p>
        </field>
    </record>
</odoo> 